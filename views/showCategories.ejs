<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <h2>Select a Category</h2>

    <% if (categories.length > 0) { %>
        <ul>
            <% categories.forEach(category => { %>
                <li>
                    <a href="/<%= category.name %>/products">
                        <%= category.name %> Products
                    </a>
                    <a href="/update/category/<%= category.category_id %>"><button>Update Category</button></a>
                    <a href="/delete/category/<%= category.category_id %>"><button>Delete Category</button></a>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No categories available at the moment.</p>
    <% } %>

    <a href="/new/category">Create new Category</a>
    <br>
    <a href="/new/product">Create new Product</a>
</body>
</html>